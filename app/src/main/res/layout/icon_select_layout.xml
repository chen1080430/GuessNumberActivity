<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="visible"
        tools:srcCompat="@drawable/icon_avatar_cat" />

    <ImageView
        android:id="@+id/icon_avatar_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="visible"
        tools:srcCompat="@drawable/icon_avatar_bear" />
    <ImageView
        android:id="@+id/icon_avatar_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="visible"
        tools:srcCompat="@drawable/icon_avatar_pig" />
</LinearLayout>
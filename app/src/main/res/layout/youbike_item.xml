<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="90dp">

    <ImageView
        android:id="@+id/imageView_bike"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@drawable/icon_avatar_bear" />

    <TextView
        android:id="@+id/textView_sna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="站點名稱"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_bike"
        app:layout_constraintLeft_toLeftOf="@id/imageView_bike"
        app:layout_constraintStart_toEndOf="@+id/imageView_bike"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView_sbi"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView_bike"
        app:layout_constraintTop_toTopOf="@id/imageView_bike"
        app:layout_constraintVertical_bias="0.8"
        app:srcCompat="@drawable/icon_avatar_cat" />
    <TextView
        android:id="@+id/textView_sbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="可借"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/imageView_sbi"
        app:layout_constraintTop_toTopOf="@id/imageView_bike"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView_rbi"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_sbi"
        app:layout_constraintTop_toTopOf="@id/imageView_bike"
        app:layout_constraintVertical_bias="0.8"
        app:srcCompat="@drawable/icon_avatar_tiger" />

    <TextView
        android:id="@+id/textView_rbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="可還"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/imageView_rbi"
        app:layout_constraintTop_toTopOf="@id/imageView_bike"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView_sarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="區域"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toEndOf="@id/textView_rbi"
        app:layout_constraintTop_toTopOf="@id/imageView_bike"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>
